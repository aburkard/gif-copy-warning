{
  "manifest_version": 3,
  "name": "GIF Copy Warning",
  "version": "1.0",
  "description": "Shows a notification when you right-click on a GIF image",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}